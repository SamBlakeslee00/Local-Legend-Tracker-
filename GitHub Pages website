<body>
    <div class="container">
        <h1>üö¥ Strava Local Legends Tracker</h1>
        <p class="subtitle">Track local legend status for your favorite segments</p>
        
        <div class="config-section">
            <h3>‚öôÔ∏è Configuration</h3>
            <div class="input-group">
                <label for="scriptUrl">Google Apps Script URL:</label>
                <input type="text" id="scriptUrl" placeholder="https://script.google.com/macros/s/YOUR_SCRIPT_ID/exec">
            </div>
            
            <div class="segment-inputs">
                <div class="input-group">
                    <label for="segment1">Segment 1 ID:</label>
                    <input type="text" id="segment1" placeholder="e.g., 12345678">
                </div>
                <div class="input-group">
                    <label for="segment2">Segment 2 ID:</label>
                    <input type="text" id="segment2" placeholder="e.g., 87654321">
                </div>
            </div>
            
            <div class="button-group">
                <button onclick="fetchData()">üîç Fetch Local Legends</button>
                <button class="secondary-button" onclick="saveConfig()">üíæ Save Config</button>
            </div>
        </div>

        <div id="results" class="results"></div>
    </div>

    <script>
        // Load saved configuration on page load
        window.onload = function() {
            const savedConfig = localStorage.getItem('stravaConfig');
            if (savedConfig) {
                const config = JSON.parse(savedConfig);
                document.getElementById('scriptUrl').value = config.scriptUrl || '';
                document.getElementById('segment1').value = config.segment1 || '';
                document.getElementById('segment2').value = config.segment2 || '';
            }
        };

        // Save configuration to localStorage
        function saveConfig() {
            const config = {
                scriptUrl: document.getElementById('scriptUrl').value,
                segment1: document.getElementById('segment1').value,
                segment2: document.getElementById('segment2').value
            };
            localStorage.setItem('stravaConfig', JSON.stringify(config));
            showMessage('Configuration saved!', 'success');
        }

        // Show message to user
        function showMessage(message, type) {
            const resultsDiv = document.getElementById('results');
            resultsDiv.innerHTML = `<div class="${type}">${message}</div>`;
            if (type === 'success') {
                setTimeout(() => {
                    resultsDiv.innerHTML = '';
                }, 3000);
            }
        }

        // Fetch data from Google Apps Script
        async function fetchData() {
            const scriptUrl = document.getElementById('scriptUrl').value;
            const segment1 = document.getElementById('segment1').value;
            const segment2 = document.getElementById('segment2').value;

            if (!scriptUrl || !segment1 || !segment2) {
                showMessage('Please fill in all fields', 'error');
                return;
            }

            const resultsDiv = document.getElementById('results');
            resultsDiv.innerHTML = '<div class="loading"><div class="spinner"></div><p>Fetching data from Strava...</p></div>';

            try {
                const response = await fetch(`${scriptUrl}?action=getLocalLegends&segments=${segment1},${segment2}`);
                const data = await response.json();

                if (data.error) {
                    showMessage(data.error, 'error');
                    return;
                }

                displayResults(data);
            } catch (error) {
                showMessage('Error fetching data. Please check your configuration and try again.', 'error');
                console.error('Error:', error);
            }
        }

        // Display the results
        function displayResults(data) {
            const resultsDiv = document.getElementById('results');
            let html = '<h2 style="text-align: center; margin-bottom: 20px;">üìä Local Legend Status</h2>';

            data.segments.forEach(segment => {
                html += `
                    <div class="segment-card">
                        <h3>${segment.name}</h3>
                        <div class="legend-info">
                            <div class="info-item">
                                <div class="info-label">Local Legend</div>
                                <div class="info-value">${segment.localLegend.athlete_name || 'Unknown'}</div>
                            </div>
                            <div class="info-item">
                                <div class="info-label">Efforts</div>
                                <div class="info-value">${segment.localLegend.effort_count || 0}</div>
                            </div>
                            <div class="info-item">
                                <div class="info-label">Distance</div>
                                <div class="info-value">${(segment.distance / 1000).toFixed(2)} km</div>
                            </div>
                            <div class="info-item">
                                <div class="info-label">Avg Grade</div>
                                <div class="info-value">${segment.average_grade}%</div>
                            </div>
                        </div>
                    </div>
                `;
            });

            html += `<div class="last-update">Last updated: ${new Date().toLocaleString()}</div>`;
            resultsDiv.innerHTML = html;
        }
    </script>
</body>
</html>
